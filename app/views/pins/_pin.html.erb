<div id="<%= dom_id pin %>">
  <p>
    <strong>Title:</strong>
    <%= pin.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= pin.body %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag(pin.image_as_thumbnail) %>
  </p>

  <p>
    <strong>Pictures:</strong>
    <% pin.picture_as_thumbnail.each do |picture| %>
    <%= image_tag(picture) %>
    <% end %>
  </p>

</div>
